{
	"editor.minimap.enabled": false,
	"editor.fontSize": 18,
	// "editor.lineHeight": 30,
	// "window.zoomLevel": 2,
	"workbench.colorCustomizations": {
		"activityBar.background": "#ffd633",
		"activityBar.activeBorder": "#009f7f",
		"activityBar.foreground": "#15202b",
		"activityBar.inactiveForeground": "#15202b99",
		"activityBarBadge.background": "#009f7f",
		"activityBarBadge.foreground": "#e7e7e7",
		"titleBar.activeBackground": "#ffcc00",
		"titleBar.inactiveBackground": "#ffcc0099",
		"titleBar.activeForeground": "#15202b",
		"titleBar.inactiveForeground": "#15202b99",
		"statusBar.background": "#ffcc00",
		"statusBarItem.hoverBackground": "#cca300",
		"statusBar.foreground": "#15202b"
	},
	"peacock.color": "#ffcc00",
	"markdown.format.wrapAttributes": "force",

	// Maximum amount of characters per line (0 = disable).
	"markdown.format.wrapLineLength": 60,
	"task.allowAutomaticTasks": "on",
}
