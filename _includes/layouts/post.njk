---
layout: layouts/base.njk
templateClass: tmpl-post
---
<h1>{{ title }}</h1>

<div class="tmpl-post__inner">
	{% if date %}
		<time class="postlist-date" datetime="{{ date | htmlDateString }}">{{ date | readableDate }}</time>
	{% endif %}

	<div class="tmpl-post__content">
		{{ content | safe }}
	</div>


	{%- if tags.length > 0 -%}
		<p class="post-taglist-label">Tagged: </p>
		<ul class="post-taglist list--inline">
			{% for tag in tags %}
				{%- if tag != "posts" -%}
					{% set tagUrl %}/tags/{{ tag }}/{% endset %}
					<li>
						<a href="{{ tagUrl | url }}" class="tag">{{ tag }}</a>
					</li>
				{%- endif -%}
			{% endfor %}
		</ul>
	{%- endif -%}

</div>

<p>
	<a href="{{ '/' | url }}">â† Home</a>
</p>
