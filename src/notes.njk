    <section>
        <!-- Iterate over every post -->
        <ul>
        {% for note in collections.notes | reverse %}
        <li class="h-entry">
            <!-- <h1 class="p-name">{% if note.data.title %}{{ note.data.title }}{% else %}{{ note.date }}{% endif %}</h1> -->
            <!-- <time class="dt-published" datetime="{{ note.date }}">{{ note.date }}</time> -->
            <div class="e-content">{{ note.content | safe }}</div>
            <a class="u-url" href="{{ note.url }}">Permalink</a>

            {% if note.data.categories %}
            <div>
                <p style="display: inline-block"><strong>Categories: </strong></p>
                <ul class="p-category  list--inline">
                    {% for category in note.data.categories %}
                    <li>{{ category }}</li>
                    {% endfor %}
                </ul>
            </div>
            {% endif %}
        </li>
        {% endfor %}
    </ul>
    </section>
