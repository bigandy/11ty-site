<!DOCTYPE html><html lang="en"><head><meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<title>{{ renderData.title or title or metadata.title }} - Andrew JD Hudson Software Engineer</title>

	{% if title === 'Bookshelf' or renderData.title === 'Bookshelf' %}
		{% set cssFile = "bookshelf.css" %}
	{% elif title === 'CV' or renderData.title === 'CV' %}
		{% set cssFile = "cv.css" %}
	{% else %}
		{% set cssFile = "styles.css" %}
	{% endif %}

	{% if metadata.isProduction or false %}
		<style>
			{% postcss "../src/assets/postcss/"+cssFile %}
		</style>
	{% else %}
		<link rel="stylesheet" href="/assets/postcss/{{ cssFile }}">
	{% endif %}

	{% if themeColor %}
		<style>:root {--theme-color: {{ themeColor }}; }</style>
	{% endif %}

    <meta name="Description" content="{{ renderData.description or description or metadata.description }}">

	<meta name="theme-color" content="{{ metadata.themeColor }}">

	<link rel="apple-touch-icon" sizes="180x180" href="{{ '/assets/images/favicon/apple-touch-icon.png' | url }}">
	<link rel="icon" type="image/png" sizes="32x32" href="{{ '/assets/images/favicon/favicon-32x32.png' | url }}">
	<link rel="icon" type="image/png" sizes="16x16" href="{{ '/assets/images/favicon/favicon-16x16.png' | url }}">
	<link rel="manifest" href="{{ '/manifest.json' }}">

	<link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
	<link href="{{ metadata.mastodon.url }}" rel="me" />
	<meta name="generator" content="{{ eleventy.generator }}">
	<meta name="view-transition" content="same-origin">
  </head>
