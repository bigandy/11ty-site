<ul class="postlist">
{% for post in postslist | reverse %}
  <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %} {% if post.data.draft == true %} postlist-item--draft {% endif %}">
<time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
    <a href="{{ post.url | url }}" class="postlist-link">
		{% if post.data.title %}
			{{ post.data.title }}
		{% else %}
			<code>{{ post.url }}</code>
		{% endif %}
	</a>


    {%- if post.data.description -%}
      <div>{{ post.data.description }}</div>
    {%- endif -%}
  </li>
{% endfor %}
</ul>
